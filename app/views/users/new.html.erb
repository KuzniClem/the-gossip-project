<div class="text-white">
  <% if @user.errors.any? %>
    <p>Nous n'avons pas réussi à créer le profile pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

	<%= form_tag users_path, method: "post" do %>

	<%= label_tag 'first_name' %>
	<%= text_field_tag 'first_name' %>
	<br /> <br />

	<%= label_tag 'last_name' %>
	<%= text_field_tag 'last_name' %>
	<br /> <br />

	<%= label_tag 'age' %>
	<%= text_field_tag 'age' %>
	<br /> <br />

	<%= label_tag 'email' %>
	<%= text_field_tag 'email' %>
	<br /> <br />

  <%= label_tag 'description', nil, rows: 10, cols: 25 %>
  <%= text_area_tag 'description' %>
  <br /> <br />

	<%= label_tag 'password' %>
	<%= text_field_tag 'password' %>
	<br /> <br />

	<%= label_tag 'password_confirmation' %>
	<%= text_field_tag 'password_confirmation' %>
	<br /> <br />

	<%= submit_tag "Sign up" %>
	<% end %>
</div>
